<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="BaseActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:exported">false</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TransparentActivity" parent="BaseActivityTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TransparentStatusActivity" parent="BaseActivityTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/action_bar</item>
        <item name="dialogCornerRadius">@dimen/radius_8</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:textColor">@color/eminem</item>
        <item name="android:textColorPrimary">@color/gray_80</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="fontFamily">@font/manrope_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DragLine">
        <item name="android:layout_width">@dimen/drag_line_width</item>
        <item name="android:layout_height">@dimen/drag_line_height</item>
        <item name="android:layout_marginTop">@dimen/mini_margin</item>
        <item name="android:background">@drawable/bg_drag_line</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_extrabold</item>
        <item name="android:textColor">@color/eminem</item>
    </style>

    <style name="IosTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
    </style>
</resources>