<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBtnBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/bg_btn_filled_active"
        android:foreground="@drawable/ripple_12">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBtnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mini_margin"
            android:fontFamily="@font/manrope_medium"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/eminem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/failure_general" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>