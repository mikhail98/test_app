<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_small_button_size"
    android:layout_height="@dimen/item_small_button_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/item_small_button_size"
        android:layout_height="@dimen/item_small_button_size"
        android:background="@drawable/bg_small_btn"
        android:foreground="@drawable/ripple_8">

        <ImageView
            android:id="@+id/ivBtnIcon"
            android:layout_width="@dimen/item_small_button_icon_size"
            android:layout_height="@dimen/item_small_button_icon_size"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_google" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>